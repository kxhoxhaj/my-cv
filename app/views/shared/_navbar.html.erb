<div class="navbar">
  <div class="navbar-expand-sm navbar-light navbar-lewagon">
    <div class="container-fluid">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fa-solid fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent" data-controller="toggle-active-class">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link active" , data: { action: "toggle-active-class#toggleHome", toggle_active_class_target: "home", turbo: "false" }%>
          </li>
          <li class="nav-item">
            <%= link_to "About", cv_path, class: "nav-link" , data: { action: "toggle-active-class#toggleAbout", toggle_active_class_target: "about", turbo: "false" }%>
          </li>
          <li class="nav-item">
            <%= link_to "Reviews", reviews_path , class: "nav-link", data: { action:"toggle-active-class#toggleReviews", toggle_active_class_target: "reviews", turbo: "false" }%>
          </li>
          <% if user_signed_in? && current_user.admin? %>
            <li class="nav-item">
              <%= link_to "Admin",  rails_admin_path, class: "nav-link" %>
            </li>
          <% end %>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Sign Up", new_user_registration_path, class: "nav-link"%>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

</div>
